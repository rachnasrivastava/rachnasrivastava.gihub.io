baseURL = "https://rachnasrivastava.com/"
title = "Hello from Rachna"
copyright = "Copyright Â© 2024 Rachna Srivastava"
paginate = 3
languageCode = "en"
DefaultContentLanguage = "en"
theme = "calligraphy"
enableInlineShortcodes = true
enableEmoji = true


[params]
  tagline = "Making children happy: one book at a time."
  cdn = false

[params.meta]
  baseOGImage = "img/screenshot.jpg"
  faviconComplete = true
  faviconSVG = true
  faviconVersion = ""
  faviconMSColor = "#00aba9"
  faviconiOSColor = "#00aba9"

[[menu.main]]
  identifier = "home"
  name = "Home"
  url = "/"
  weight = 1

[[menu.main]]
  identifier = "books"
  name = "Books"
#  pageRef = "/books"
  url = "/books/"
  weight = 20

